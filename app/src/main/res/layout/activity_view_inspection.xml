<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewInspectionActivity">

    <TextView
        android:id="@+id/view_inspection_date_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Inspection conducted on 12/12/12" />

    <TextView
        android:id="@+id/view_inspection_points_label_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/inspection_view_points_label_text"
        app:layout_constraintEnd_toEndOf="@+id/view_inspection_date_title_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_inspection_date_title_text"
        app:layout_constraintTop_toBottomOf="@+id/inspected_by_text_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_inspection_points_recycler_view"
        android:layout_width="368dp"
        android:layout_height="425dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/view_inspection_points_label_text_view"
        app:layout_constraintStart_toStartOf="@+id/view_inspection_points_label_text_view"
        app:layout_constraintTop_toBottomOf="@+id/view_inspection_points_label_text_view" />

    <TextView
        android:id="@+id/inspected_by_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/view_inspection_date_title_text"
        app:layout_constraintStart_toStartOf="@+id/view_inspection_date_title_text"
        app:layout_constraintTop_toBottomOf="@+id/view_inspection_date_title_text"
        tools:text="inspected by: dave" />
</android.support.constraint.ConstraintLayout>