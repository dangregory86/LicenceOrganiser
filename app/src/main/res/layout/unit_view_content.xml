<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/view_unit_title_text_view"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11 EOD Regt" />

    <TextView
        android:id="@+id/view_unit_address_text_view"
        android:layout_width="172dp"
        android:layout_height="66dp"
        android:layout_marginTop="8dp"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/view_unit_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/view_unit_title_text_view"
        tools:text="11 b square,\ngeorge,\nwf6 1pl" />

    <TextView
        android:id="@+id/view_unit_co_text_view"
        android:layout_width="118dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/view_unit_title_text_view"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/view_unit_title_text_view"
        tools:text="Lt Col Jefery" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/view_unit_co_label_text_view"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view_unit_address_text_view"
        app:layout_constraintTop_toBottomOf="@+id/view_unit_title_text_view" />

    <TextView
        android:id="@+id/view_unit_contact_number"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/view_unit_address_text_view"
        app:layout_constraintStart_toStartOf="@+id/view_unit_address_text_view"
        app:layout_constraintTop_toBottomOf="@+id/view_unit_address_text_view"
        tools:text="01924 894927" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_unit_licence_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/view_unit_add_licence_button"
        app:layout_constraintStart_toStartOf="@+id/view_unit_add_licence_button"
        app:layout_constraintTop_toBottomOf="@+id/view_unit_add_licence_button" />

    <Button
        android:id="@+id/unit_view_add_inspection_point_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/add_inspection_button_text"
        app:layout_constraintEnd_toEndOf="@+id/view_unit_licence_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/view_unit_licence_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/view_unit_licence_recycler_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/unit_view_inspection_points_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/unit_view_add_inspection_point_button"
        app:layout_constraintStart_toStartOf="@+id/unit_view_add_inspection_point_button"
        app:layout_constraintTop_toBottomOf="@+id/unit_view_add_inspection_point_button" />

    <Button
        android:id="@+id/delete_unit_unit_view"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="@+id/view_unit_co_text_view"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/view_unit_co_text_view" />

    <Button
        android:id="@+id/view_unit_add_licence_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/view_unit_add_licence_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_unit_contact_number" />
</android.support.constraint.ConstraintLayout>